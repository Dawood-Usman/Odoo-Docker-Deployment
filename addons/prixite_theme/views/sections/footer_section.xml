<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="pr_footer" inherit_id="website.layout" name="Prixite Footer">
		<xpath expr="//footer" position="replace">
			<style>
				.footer {
				font-size: 0.9rem;
				background-color: rgba(99, 172, 69, .1);
				padding-top: 50px;
				margin-top: 80px;
				}
				.footer-heading + ul li a,
				.footer-heading + ul li a:hover,
				.footer-heading + ul li a:active,
				.footer-heading + ul li a:focus,.footer a:hover {
				text-decoration: none !important;
				}
				.footer-last-section{
				padding-left: 0;
				padding-right: 0;
				}
				.header-dot-footer{
				font-size: 35px;
				line-height: 1.1;
				color: #63AC45;
				align-self: self-end;
				}
				.logo-img{
				height: 30px;
				width: 30px;
				}
				.title-heading-footer{
				font-size: 22px;
				font-weight: 800;
				color: black;
				margin-left: 5px;
				}
				@media (max-width: 767px) {
                li {
				margin-bottom: 5px !important;
				}
				.footer p, .footer a  {
				font-size: 9px !important;
				}
				.vertical-line {
				height: 10px !important;
				border: 0.1px solid;
				border-color: rgb(0 0 0 / 12%);
				margin: 0 !important;
				}
				.footer h3, .footer h5 {
				font-size: 16px;
				}
				
				.footer p, .footer li, .footer a {
				font-size: 14px;
				}
				
				.footer img{
				height: 15px;
				width: 15px;
				}
				.title-heading-footer{
				font-size: 12px;
				font-weight: 800;
				color: black;
				margin-left: 5px;
				}
				.footer .row [class*="col-"] {
				padding: 0.5rem;
				}
				.footer-heading{
				font-size: 8px !important;
				font-weight: 700 !important;
				}
				.logo-img{
				height: 15px;
				width: 15px;
				}
				.header-dot-footer{
				font-size: 22px;
				line-height: 0.7 !important;
				color: #63AC45;
				align-self: self-end;
				}
				}
				
				.copyright{
				font-weight: 400;
				font-size: 1rem;
				line-height: 1.5;
				}
				.footer-heading{
				font-size: 18px;
				font-weight: 600;
                line-height: 1.5;
				}
				.join-us-icons{
				display: flex;
				gap: 7px;
				align-items: center;
				justify-content: end;
				}
				.divider{
				border: 1px solid;
				border-color: rgb(0 0 0 / 36%);
				}
				.footer h3 {
				color: #63ac45;
				}
				
				.footer p,
				.footer li,
				.footer a {
				color: #000;
				line-height: 1.6;
				font-weight: 400;
				}
				.vertical-line {
				height: 17px;
				width: 1px;
				background-color: #333;
				display: inline-block;
				margin: 4px 10px 0 0px;
				opacity: 0.3;
				}
				.footer a {
				text-decoration: none;
				}
				
				li {
				margin-bottom: 16px;
				}
				.footer a:hover {
				text-decoration: underline;
				}
				
				.footer .fas {
				margin-right: 8px;
				}
				
				@media (max-width: 767px) {
				.footer .col-md-4 {
				margin-bottom: 1rem;
				}
				}
			</style>
			<footer class="footer text-black pb-2">
				<div class="container">
					<div class="row">
						<div class="col-6 text-start mb-3 mb-md-0">
							<!-- Company Logo and Info -->
							<a class="navbar-brand" style="display: flex; margin-bottom: 10px" href="/">
								<img src="/prixite_theme/static/img/logo.png" alt="Logo" class="logo-img" />
								<strong class="title-heading-footer">
									PRIXITE
								</strong>
								<span class="header-dot-footer">
									&#8226;
								</span>
							</a>
							<p>
								<img src="/prixite_theme/static/img/location.png" alt="Location" class="footer_icon" />
								Sheridan, WY, USA | Lahore, Pakistan
							</p>
							<p>
								<img src="/prixite_theme/static/img/phone.png" alt="Phone" class="footer_icon" />
								+1 (628) 277-3693
							</p>
							<p>
								<img src="/prixite_theme/static/img/mail.png" alt="Email" class="footer_icon" />
								hi@prixite.com
							</p>
						</div>
						<div class="col-4 text-start mb-3 mb-md-0">
							<h5 class="mb-4 footer-heading">
								More Information
							</h5>
							<ul class="list-unstyled">
								<li>
									<a href="/about-us">
										About Us
									</a>
								</li>
								<li>
									<a href="/contact-us">
										Contact Us
									</a>
								</li>
								<li>
									<a href="/services">
										Services
									</a>
								</li>
								<li>
									<a href="/blogs">
										News &amp; Blogs
									</a>
								</li>
							</ul>
						</div>
						<div class="col-2 text-end footer-last-section">
							<h5 class=" mb-4 footer-heading">
								Join Us On
							</h5>
							<div class="join-us-icons">
								<a href="https://web.facebook.com/prixite/" class="text-decoration-none">
									<img src="/prixite_theme/static/img/fb.png" alt="Facebook" class="social_icon_fb" />
								</a>
								<span class="vertical-line">
								</span>
								<a href="https://www.linkedin.com/company/prixite/mycompany/" class="text-decoration-none">
									<img src="/prixite_theme/static/img/linkdein.png" alt="LinkedIn" class="social_icon" />
								</a>
								<span class="vertical-line">
								</span>
								<a href="https://www.instagram.com/prixitegram/" class="text-decoration-none">
									<img src="/prixite_theme/static/img/instagram.png" alt="Instagram" class="social_icon" />
								</a>
							</div>
						</div>
					</div>
					<hr class="my-4 divider" />
					<div class="row">
						<div class="col-12 text-center">
							<p class="copyright">
								Prixite Â© 2024. All Rights Reserved.
							</p>
						</div>
					</div>
				</div>
			</footer>
		</xpath>
	</template>
</odoo>
